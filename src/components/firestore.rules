rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isTeamLeader() {
      return isSignedIn() && (
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'team-leader') ||
        (request.auth.token.email == 'vivek@mm.com')
      );
    }

    function isEditor() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'editor';
    }

    match /orders/{orderId} {
      allow read: if isSignedIn() && (
        isTeamLeader() || 
        (request.auth.token.email != null && request.auth.token.email in resource.data.assignedEditorEmails)
      );

      // Allow create for Team Leaders OR for editors creating a self-order.
      allow create: if isTeamLeader() || (
        isEditor() && request.resource.data.isSelfOrder == true &&
        request.resource.data.assignedEditorEmails[0] == request.auth.token.email
      );

      allow update: if isSignedIn() && (
        isTeamLeader() || 
        (
          request.auth.token.email != null &&
          request.auth.token.email in resource.data.assignedEditorEmails &&
          (
            (
              resource.data.assignmentType == 'broadcast' &&
              request.resource.data.assignmentType == 'direct' &&
              request.resource.data.assignedEditorEmails.size() == 1 &&
              request.resource.data.assignedEditorEmails[0] == request.auth.token.email
            ) ||
            (
              request.resource.data.assignmentType == resource.data.assignmentType &&
              request.resource.data.assignedEditorEmails == resource.data.assignedEditorEmails
            )
          )
        )
      );

     allow delete: if isTeamLeader();
    }
    
    match /users/{userId} {
      // Allow a user to read their own profile, or a team leader to read any profile.
      // This prevents editors from reading each other's profiles.
      allow read: if isSignedIn() && (request.auth.uid == userId || isTeamLeader());
      allow write: if isSignedIn() && (request.auth.uid == userId || isTeamLeader());
    }

    // Add rules for the new notifications collection
    match /notifications/{notificationId} {
      // A user can only read notifications sent to them.
      allow read: if isSignedIn() && resource.data.recipientEmail == request.auth.token.email;
      // Any signed-in user can create a notification (e.g., editor alerting TL, or TL alerting editor).
      // The 'read' rule above is the primary security mechanism here.
      allow create: if isSignedIn();
    }
  }
}